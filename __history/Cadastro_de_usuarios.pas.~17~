unit Cadastro_de_usuarios;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TCad_Usu = class(TForm)
    btn_salvar: TButton;
    btn_deletar: TButton;
    btn_editar: TButton;
    Label1: TLabel;
    txt_nome: TEdit;
    txt_nome2: TEdit;
    txt_nome3: TEdit;
    lb_nome: TLabel;
    procedure btn_salvarClick(Sender: TObject);
  private
    { Private declarations }
    var form_n1, form_n2:string;
    var n1, n2, res : integer;

  public
    { Public declarations }
  end;

var
  Cad_Usu: TCad_Usu;

implementation

{$R *.dfm}

procedure TCad_Usu.btn_salvarClick(Sender: TObject);
begin

  n1 := strToInt(txt_nome.Text);
  n2 := strToInt(txt_nome2.Text);
  res := n1 + n2;
  txt_nome3.Text := intToStr(res);

  if(res > 50) then
    begin
        ShowMessage('O valor é maior que 50');
    end
  else
    begin
        ShowMessage('O valor é menor ou igual a 50');
    end;
end;

end.
